<HTML>

  <form action='/logout' method='post'>
    You are: {{name}}    <input type='submit' value='Logout'>
  </form>
  <form action='/view/court/{{num}}/{{prevDay}}' method='get' style='float:left;'>
    <input type='submit' value='Previous Day'>
  </form>
  <form action='/view/court/{{num}}/{{nextDay}}' method='get'>
    Today's Date: {{day}}  <input type='submit' value='Next Day'>
  </form>
  <form action='/view/court/{{num-1}}/{{day}}' method='get' style='float:left;'>
    <input type='submit' value='Previous Court'>
  </form>
  <form action='/view/court/{{num+1}}/{{day}}' method='get'>
    Court number: {{num}} <input type='submit' value='Next Court'><br>
  </form>      
  {% for i in range(24) %}
     {% if i not in daySched %}
        <form action='/view/court/{{num}}/{{day}}/hour/{{i}}' method='post'>
	  {{i}}: <input type='submit' value='Reserve!'> <br>
	</form>
     {%else%}
	<form action='/cancel/court/{{num}}/{{day}}/hour/{{i}}' method='post'>
	{{i}}: {{daySched[i]}} <input type='submit' value='Cancel'> <br>
	</form>
     {%endif%}
  {%endfor%}
</HTML>
